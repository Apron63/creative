{% extends 'main.html.twig' %}

{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="mt-5 mb-4">{{ trailers | length }} iTunes Movie trailers</h1>
        <table class="table table-bordered">
            {% for trailer in trailers %}
                <tr>
                    <td>
                        <a href="/detail/{{ trailer.id }}/">{{ trailer.title }}</a>
                    </td>
                    <td>
                        {% if trailer.image is not null %}
                            <img src="{{ trailer.image }}" alt="{{ trailer.image }}">
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </table>

        <div class="row">
            Current datetime is: {{ 'now' | date('d.m.Y H:i:s') }}
        </div>

        <div class="row">
            Class is: {{ class }}
        </div>

        <div class="row">
            Method is: {{ method }}
        </div>
    </div>
{% endblock %}
